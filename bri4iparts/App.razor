<CascadingAuthenticationState>
    <MatPortalHost></MatPortalHost>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="container">
                        <h1>Съжаляваме</h1>
                        <p>Трябва да се авторизирате, за да достигнете до съдържанието</p>
                        <p>Моля влезте в акаунта си</p>
                        <a href="/login">Влез в акаунта си</a>
                    </div>
                </NotAuthorized>
                <Authorizing>
                    <div class="container">
                        <h1>Автентикиране...</h1>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Няма нищо на този адрес.</p>
            </LayoutView>
        </NotFound>
    </Router>

</CascadingAuthenticationState>
